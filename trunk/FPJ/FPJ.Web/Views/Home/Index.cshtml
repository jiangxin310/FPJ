@{
    ViewBag.Title = "首页";
    var CurrentUser = ViewBag.CurrentUser as UserLoginVM;
}
@model List<User>
<div>
    @if (CurrentUser != null)
    {
        <span>当前登录用户：@CurrentUser.UserName</span>
        <span><a href="/user/loginout">注销</a></span>
    }
    else
    {
        <span><a href="/user/login">登录</a></span>
    }
</div>
<table class="table">
    <tr>
        <th>ID</th>
        <th>用户名</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserId</td>
            <td>@item.UserName</td>
            <td><a href="/home/detail/@item.UserId">详情</a></td>
        </tr>  
    }
</table>
